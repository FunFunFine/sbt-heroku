# Stage the distribution and ensure it can be deployed.
> createApp
> show stage
$ exists target/universal/stage/bin/sample-play-app
> show deployHeroku
$ exists target/heroku/app/
$ exists target/heroku/build.tgz
$ exists target/heroku/diagnostics.log
$ exists target/heroku/app/app/controllers/Application.scala
$ exists target/heroku/app/conf/routes
$ exists target/heroku/app/public/javascripts/hello.js
-$ exists target/heroku/app/project
> cleanup
